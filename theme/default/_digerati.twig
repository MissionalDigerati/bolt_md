<div class="col-sm-4">
  {% if digerati.thumb_image is defined and digerati.thumb_image is not empty %}
      <figure class="icon-overlay medium icn-more">
        <a href="{{ digerati.thumb_image|image }}" class="fancybox-media" data-rel="digeratis" rel="digeratis">
          <span class="icn-more"></span>
          <img src="{{ digerati.thumb_image|image }}" alt="{{ digerati.first_name }} {{ digerati.last_name }}">
        </a>
      </figure>
  {% endif %}
  <div class="image-caption">
    <h3>{{ digerati.prefix }} {{ digerati.first_name }} {{ digerati.last_name }}</h3>
    <span class="meta">{{ digerati.title }}</span>
    {{ digerati.biography }}
    <span class="languages meta tags">
      {% if digerati.taxonomy.languages is defined and digerati.taxonomy.languages is not empty %}

          {% for language in digerati.taxonomy.languages %}

            <span class="language-tag">{{ language }}</span>         
          
          {% endfor %}

      {% endif %}
      {{ print(digerati.relation) }}
    </span>
    <ul class="social">
      <li><a href="#"><i class="icon-s-twitter"></i></a></li>
      <li><a href="#"><i class="icon-s-facebook"></i></a></li>
      <li><a href="#"><i class="icon-s-pinterest"></i></a></li>
      <li><a href="#"><i class="icon-s-linkedin"></i></a></li>
    </ul>
  </div>
</div>