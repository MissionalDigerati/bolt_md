{% include '_header.twig' %}

<div class="row-fluid">
    <h1><strong>{{ __('Attendance') }}</strong></h1>
    <h2>{{ class_record.title }} (<em>{{class_record.date_of_class|date("M d, ’y @ g:i a")}}</em>)</h2>
    {% set type_of_training = class_record.related('curriculum') %}
    <p><strong>Training</strong>:&nbsp;
        {% for training_type in type_of_training[0].taxonomy.training_types %}
            {{training_type}}
        {% endfor %}
    </p>
    <p><strong>Curriculum</strong>:&nbsp;{{ type_of_training[0].title }}</p>
    <table class='dashboardlisting' style="width: 100%;">
        <tr>
            <th>{{ __('Name') }}</th>
            <th>{{ __('Ministry') }}</th>
            <th>{{ __('Email') }}</th>
            <th>{{ __('Phone') }}</th>
            <th>{{ __('Programming Experience') }}</th>
            <th>{{ __('Languages') }}</th>
            <th>{{ __('Date Registered') }}</th>
            <th>{{ __('Actions') }}</th>
        </tr>
    {% if students is defined and students is not empty %}

        {% for student in students %}

            <tr>
                <td>{{student.name}}</td>
                <td>{{student.ministry}}</td>
                <td>{{student.email}}</td>
                <td>{{student.phone}}</td>
                <td>{{student.experience_programming}}</td>
                <td>{{student.programming_languages}}</td>
                <td>{{student.timestamp|date("M d, ’y @ g:i a")}}</td>
                <td></td>
            </tr>
            
        {% endfor %}

    {% else %}

        <tr>
            <td colspan="3">Sorry, no students enrolled currently.</td>
        </tr>

    {% endif %}
    </table>
</div>
{% include '_footer.twig' %}